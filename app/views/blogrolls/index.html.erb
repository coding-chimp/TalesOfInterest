<% title "Blogroll" %>

<%- model_class = Blogroll.new.class -%>

<div class="well">
	<h2>Blogroll</h2>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>URL</th>
				<th>Description</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for item in @blogroll do %>
				<tr>
					<td><%= item.name %></td>
					<td><%= item.url %></td>
					<td><%= item.description %></td>
					<td>
						<%= link_to "Edit", edit_blogroll_item_path(item), class: 'btn btn-info btn-mini' %>
						<%= link_to t('.destroy', default: t("helpers.links.delete")), blogroll_path(item),
  	                                	method: :delete, confirm: t('.confirm', 
  	                                	default: t("helpers.links.confirm", default: 'Are you sure?')),
  	                                	class: 'btn btn-mini btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<p class="pull-right">
  	<%= link_to t('.new', default: t("helpers.links.new")), new_blogroll_item_path, class: 'btn btn-primary' %>
	</p>

	<div class="clearfix"></div>

</div>