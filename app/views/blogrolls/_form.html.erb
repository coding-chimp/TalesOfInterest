<%= simple_form_for @item, html: { class: 'form-horizontal' } do |f| %>
  <% if notification = f.error_notification %>
      <%= notification %>
  <% end %>

  <%= f.input :name %>

  <%= f.input :url %>

  <%= f.input :description %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Cancel", blogrolls_path, class: 'btn' %>
  </div><!-- /form-actions -->
<% end %>
