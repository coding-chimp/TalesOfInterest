<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? "#{Settings.first.site_name} | #{yield(:title)}" : Settings.first.site_name %></title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jwplayer" %>
  <%= javascript_include_tag "jwplayer.html5" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <% unless Settings.first.ga_code == nil || Settings.first.ga_code.empty? %>
    <script>var _gaq=[['_setAccount','<%= Settings.first.ga_code %>'],['_trackPageview']];(function(d, t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];g.src='//www.google-analytics.com/ga.js';s.parentNode.insertBefore(g, s);}(document,'script'));</script>
  <% end %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/"><%= Settings.first.site_name %></a>
        <div class="nav-collapse">
          <ul class="nav">
            <% @podcasts = Podcast.order("name asc") %>
          	<% @podcasts.each do |podcast| %>
          		<li class="divider-vertical"></li>
          		<li><%= link_to podcast.name, podcast %></li>
          	<% end %> 
            <li class="divider-vertical"></li>
          </ul>
          <form class="navbar-search pull-right">
            <%= form_for @search do |f| %>
              <%= f.text_field :title_or_description_contains, :class => "search-query", :placeholder => "Search" %>
            <% end %>
          </form>
          <% @pages = Page.order("titel") %>
          <% unless @pages.size == 0 %>
          <ul class="nav pull-right">
            <% @pages.each do |page| %>
              <li class="divider-vertical"></li>
              <li><%= link_to page.titel, page %></li>
            <% end %>
            <li class="divider-vertical"></li>
          </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
		<div class="row">
      <div class="span11">
      <% if user_signed_in? %>
        <ul class="nav nav-tabs">
          <li class="<%= 'active' if params[:controller] == "blogrolls" %>">
            <%= link_to "Blogroll", blogrolls_path %>
          </li>
          <li class="<%= 'active' if params[:controller] == "pages" %>">
            <%= link_to "Pages", pages_path %>
          </li>
          <li class="<%= 'active' if params[:controller] == "podcasts" %>">
            <%= link_to "Podcasts", podcasts_path %>
          </li>
          <li class="<%= 'active' if params[:controller] == "settings" %>">
            <%= link_to "Settings", settings_path %>
          </li>
          <li class="<%= 'active' if params[:controller] == "users" %>">
            <%= link_to "Users", users_path %>
          </li>
          <li class="pull-right">
            <%= link_to "Logout", destroy_user_session_path, method: :delete %>
          </li>
          <li class="pull-right">
            <p><%= current_user.email %></p>
          </li>
        </ul>
      <% end %>
      </div>
      <div class="span7">	<%= yield %></div>
			<div class="span4">
        <div class="well">
				  <h3>Subscribe</h3>
          <ul class="unstyled">
            <% @podcasts.each do |podcast| %>
              <li><%= image_tag("rss.png") %> <%= link_to "#{podcast.name} RSS Feed", podcast_feed_path(podcast) %></li>
              <% unless podcast.itunes_link == nil || podcast.itunes_link.empty?  %>
                <li><%= image_tag("itunes.png") %> <%= link_to "#{podcast.name} in iTunes", podcast.itunes_link %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
        <% unless Settings.first.flattr_code == nil || Settings.first.flattr_code.empty? %>
          <div class="well">
            <h3>Spenden</h3>
            <a href="http://flattr.com/thing/<%= Settings.first.flattr_code %>" target="_blank">
              <img src="http://api.flattr.com/button/flattr-badge-large.png" alt="Flattr this" title="Podcast Flattrn" border="0">
            </a>
          </div>
        <% end %>
        <% @blogs = Blogroll.order("name asc") %>
        <% unless @blogs.size == 0 %>
          <div class="well">
            <h3>Blogroll</h3>
            <dl>
              <% @blogs.each do |blog| %>
                <dt><%= link_to blog.name, blog.url %></dt>
                <dd><%= blog.description %></dd>
              <% end %>
            </dl>
          </div>
        <% end %>
			</div>
		</div>
	</div>
  <div class="footer">
    <div class="container">
      <p>Copyright Â© <%= Date.today.strftime("%Y") %> <%= Settings.first.site_name %></p>
    </div>
  </div>
</body>
</html>