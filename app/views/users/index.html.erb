<% title "Users" %>

<div class="well">
	<h2>Users</h2>

	<table class="table table-striped" id="user_table">
		<thead>
			<tr>
				<th>E-Mail</th>
				<th>Last Signed In</th>
				<th>Updated At</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for user in @users do %>
				<tr>
					<td><%= user.email %></td>
					<td><%= user.current_sign_in_at.strftime("%d.%m.%y %H:%M") if user.current_sign_in_at %></td>
					<td><%= user.updated_at.strftime("%d.%m.%y %H:%M") %></td>
					<td>
						<%= link_to "Edit", edit_user_path(user), :class => 'btn btn-info btn-mini' %>
						<%= link_to "Delete", user_path(user), method: :delete, confirm: 'Are you sure?',
  	                              class: 'btn btn-mini btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<p class="pull-right">
  	<%= link_to "New", new_user_path, class: 'btn btn-primary' %>
	</p>

	<div class="clearfix"></div>

</div><!-- /well -->