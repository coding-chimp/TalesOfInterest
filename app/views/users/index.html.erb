<% title "Users" %>

<%- model_class = User.new.class -%>

<div class="well">
	<h2>Users</h2>

	<% if notice %>
		<br />
    <div class="alert alert-success">
      <%= notice %>
    </div>
	<% end %>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>E-Mail</th>
				<th>Last Signed In</th>
				<th>Updated At</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for user in @users do %>
				<tr>
					<td><%= user.email %></td>
					<td><%= user.current_sign_in_at.strftime("%d.%m.%y %H:%M") if user.current_sign_in_at %></td>
					<td><%= user.updated_at.strftime("%d.%m.%y %H:%M") %></td>
					<td>
						<%= link_to "Edit", edit_user_path(user), :class => 'btn btn-info btn-mini' %>
						<%= link_to t('.destroy', default: t("helpers.links.delete")), user_path(user),
  	                                	method: :delete, confirm: t('.confirm', 
  	                                	default: t("helpers.links.confirm", default: 'Are you sure?')),
  	                                	class: 'btn btn-mini btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<p class="pull-right">
  	<%= link_to t('.new', default: t("helpers.links.new")), new_user_path, class: 'btn btn-primary' %>
	</p>

	<div class="clearfix"></div>

</div><!-- /well -->