<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <div class="large-8 large-offset-1">
    <% if notification = f.error_notification %>
      <div class="large-9 large-offset-3">
        <div class="alert-message"><%= notification %></div>
      </div>
    <% end %>

    <%= f.input :email %>

    <%= f.input :password %>

    <%= f.input :password_confirmation %>
  </div>

  <div class="large-10">
    <div class="form-actions">
      <%= link_to "Cancel", users_path, class: 'button' %>
      <%= f.submit nil, class: 'primary button' %>
    </div>
  </div>
<% end %>
