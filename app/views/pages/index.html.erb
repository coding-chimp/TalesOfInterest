<% title "Pages" %>

<div class="well">
	<h2>Pages</h2>

	<% if notice %>
		<br />
    <div class="alert alert-success">
      <%= notice %>
    </div>
	<% end %>

	<table class="table table-striped" id="pages_table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Last Updated At</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for page in @pages do %>
				<tr>
					<td><%= page.title %></td>
					<td><%= page.updated_at.strftime("%d.%m.%y %H:%M") %></td>
					<td>
						<%= link_to "Edit", edit_page_path(page), class: 'btn btn-info btn-mini' %>
						<%= link_to "Delete", page_path(page), method: :delete, confirm: 'Are you sure?',
  	                              class: 'btn btn-mini btn-danger' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<p class="pull-left">
  	<%= link_to "Import", import_page_path, class: 'btn btn-info' %>
	</p>

	<p class="pull-right">
  	<%= link_to "New", new_page_path, class: 'btn btn-primary' %>
	</p>

	<div class="clearfix"></div>

</div><!-- /well -->