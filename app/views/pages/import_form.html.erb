<% title "Page Import" %>

<div class="well">
	<h2>New Pages</h2>

	<p>Import pages from a XML file.</p>

	<%= simple_form_for :import, :url => { :action => "import_xml" }, :html => { :class => 'form-horizontal' } do |f| %>
	
    <% if notification = flash[:error] %>
    	<div class="alert alert-error"><%= notification %></div>
  	<% end %>

		<%= f.input :file, :as => :file %>
	
		<div class="form-actions">
   		<%= f.submit "Import", :class => 'btn btn-primary' %>
    	<%= link_to "Cancel", podcasts_path, :class => 'btn' %>
  	</div>

	<% end %>
</div><!-- /well -->
