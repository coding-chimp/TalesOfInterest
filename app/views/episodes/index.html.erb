<% content_for :banner do %>
<ul class="thumbnails">
	<% @podcasts.each do |podcast| %>
    <li class="span3">
      <% if podcast.artwork.present? %>
        <div class="thumbnail">
          <%= link_to image_tag(podcast.artwork.url(:medium)), podcast %>
        </div><!-- /thumbnail -->
      <% end %>
    </li><!-- /span -->
  <% end %>
</ul><!-- /thumbnails -->
<% end %>

<%= render @episodes %>

<%= paginate @episodes %>