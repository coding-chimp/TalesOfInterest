<% present @episode do |episode_presenter| %>
<% title episode_presenter.full_title %>

	<% content_for :banner do %>
	<ul class="thumbnails">

		<li class="span3">
			<%= episode_presenter.artwork %>
		</li><!-- /span -->

		<li class="span5">
			<%= episode_presenter.linked_podcast_name %>
			<%= episode_presenter.podcast_description %>
		</li><!-- /span -->

	</ul><!-- /thumbnails -->
	<% end %>

	<% content_for :banner_alt do %>
	<ul class="thumbnails">

		<li class="span4">
			<%= episode_presenter.linked_podcast_name %>
			<%= episode_presenter.podcast_description %>
		</li><!-- /span -->

	</ul><!-- /thumbnails -->
	<% end %>


	<div class="well">
		<h4 class="episode-num">Episode #<%= episode_presenter.num %>
		<h2><%= episode_presenter.title %></h2>
		<h4><%= episode_presenter.published_at %><%= episode_presenter.duration_in_words %></h4>
		<div class="description"><%= episode_presenter.description %></div>

		<%= podloveaudio(mp4: episode_presenter.file_url("mp4"), mp3: episode_presenter.file_url("mp3"),
		                 opus: episode_presenter.file_url("opus"), ogg: episode_presenter.file_url("ogg"),
				           	 title: episode_presenter.title, permalink: episode_presenter.uri, 
				             subtitle: episode_presenter.truncated_clean_description.gsub(/\n/, ' ').gsub(/\r/, ''),
				             startVolume: 1, chapters: episode_presenter.podlove_chapters,
				             duration: episode_presenter.duration) %>

		<div class="downloads">
			<%=raw episode_presenter.downloads %>
		</div>

		<div class="clearfix"></div>

		<% if @episode.spotify_playlist.present? %>
			<iframe src="https://embed.spotify.com/?uri=spotify:user:talesofinterest:playlist:<%= @episode.spotify_playlist %>&theme=white" width="500" height="580" frameborder="0" allowtransparency="true"></iframe>
		<% end %>

		<% unless @episode.introduced_titles.size == 0 %>
			<h3>Vorgestellte Titel</h3>
			<table class="table table-striped" id="links">
				<% @episode.introduced_titles.each do |title| %>
					<tr>
						<td><%= link_to markdown(title.name), title.url, target: "_blank" %></td>
		  			</tr>
				<% end %>
			</table>
		<% end %>

		<% unless @episode.show_notes.size == 0 %>
			<h3>Show Notes & Links</h3>
			<table class="table table-striped" id="links">
				<% @episode.show_notes.order('position').each do |show_note| %>
					<tr>
						<td><%= link_to markdown(show_note.name), show_note.url, target: "_blank" %></td>
		  			</tr>
				<% end %>
			</table>
		<% end %>
		
	</div><!-- /well -->

	<ul class="pager">
		<%= episode_presenter.prev_link %>
		<%= episode_presenter.next_link %>
	</ul>

<% end %>