<%- model_class = @episode.class -%>

<div class="hero-unit">
	<ul class="thumbnails">
		<li class="span2">
			<div class="thumbnail">
				<%= image_tag("Tales of Interest.jpg") %>
			</div>
		</li>
		<li class="span3">
			<h2><%= link_to @episode.podcast.name, podcast_path(@episode.podcast) %></h2>
			<p><%= @episode.podcast.description %></p>
		</li>
	</ul>
</div>

<div class="well">
	<h4>Episode #<%= @episode.number %>
	<h2><%= @episode.title %></h2>
	<h4><%= @episode.created_at.strftime("%d. %B %Y") %><%= " â€¢ #{@episode.length} Minuten" if @episode.length %></h4>
	<%= markdown(@episode.description) %>
	<p><%= link_to "Download Podcast", @podcast_url %></p>

	<% unless @episode.show_notes.size == 0 %>
		<h3>Show Notes & Links</h3>
		<table class="table table-striped">
			<% @episode.show_notes.each do |show_note| %>
				<tr>
					<td><%= link_to show_note.name, show_note.url %></td>
	  			</tr>
			<% end %>
		</table>
	<% end %>
	
	<p><%= link_to "Back", root_url %></p>
</div>