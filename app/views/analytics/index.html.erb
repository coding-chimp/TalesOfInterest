<div class="well">
  <h2>Analytics</h2>

  <table class="table table-striped table-bordered table-hover" id="episode_analytics_table" data-source="<%= episodes_url(format: "json") %>">
    <thead>
      <tr>
        <th style="width: 25%; text-align: center;">Title</th>
        <th style="width: 25%; text-align: center;">Hits</th>
        <th style="width: 30%; text-align: center;">Downloaded</th>
        <th style="width: 20%; text-align: center;">Downloads</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>

  <div id="graph_title">
    <%= render "title" %>
  </div>

  <div class="well">
  <form class="form-inline pull-right">
    <div id="startdatepicker" class="input-append date">
      <label>Von</label>
      <input type="text" class="input-small" value="<%= @start.strftime("%Y-%m-%d") %>"></input>
      <span class="add-on"><i data-date-icon="icon-calendar"></i></span>
    </div>

    <div id="enddatepicker" class="input-append date">
      <label>Bis</label>
      <input type="text" class="input-small" value="<%= @stop.strftime("%Y-%m-%d") %>"></input>
      <span class="add-on"><i data-date-icon="icon-calendar"></i></span>
    </div>
  </form>
  </div>

  <div id="graph">
    <%= render "graph" %>
  </div>

</div>