<div class="well">
  <h2>Analytics</h2>

  <table class="table table-striped table-bordered table-hover" id="episode_analytics_table" data-source="<%= episodes_url(format: "json") %>">
    <thead>
      <tr>
        <th style="width: 25%; text-align: center;">Title</th>
        <th style="width: 25%; text-align: center;">Hits</th>
        <th style="width: 30%; text-align: center;">Downloaded</th>
        <th style="width: 20%; text-align: center;">Downloads</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>

  <h2>Downloads #<%= "#{@episode.num} #{@episode.title}" %> <span class='muted'><%= @episode.podcast.name %></span></h2>

  <%= content_tag :div, "", id: "downloads_chart", data: { downloads: EpisodeAnalytics.graph(@episode), files: EpisodeAnalytics.files(@episode) } %>

</div>