<div class="large-8 large-offset-1">
  <% if notification = f.error_notification %>
    <div class="row">
      <div class="alert-message small-9 small-offset-3">
        <%= notification %>
      </div>
    </div>
  <% end %>

  <%= f.input :name %>

  <%= f.input :author %>

  <%= f.input :description %>

  <%= f.input :artwork %>

  <% if @podcast.artwork? %>
    <div class="large-offset-3">
      <ul class="clearing-thumbs" data-clearing>
        <li><%= link_to image_tag(@podcast.artwork.url(:medium)), @podcast.artwork.url, class: "th radius" %></li>
      </ul>
    </div>
  <% end %>

  <%= f.input :category1, label: 'Category', collection: CATEGORIES, prompt: 'Select a category',
              input_html: { style: "display: none" } %>

  <%= f.input :category2, label: 'Category', collection: CATEGORIES, prompt: 'Select a category',
              input_html: { style: "display: none" } %>

  <%= f.input :category3, label: 'Category', collection: CATEGORIES, prompt: 'Select a category',
              input_html: { style: "display: none" } %>

  <%= f.input :keywords %>

  <div class="row checkbox-row">
    <div class="small-9 small-offset-3">
      <label for="page_footer">
        <%= f.input_field :explicit, style: "display: none;", id: "page_footer" %>
        <span class="custom checkbox"></span> Explicit
      </label>
    </div>
  </div>

  <%= f.input :itunes_link %>

  <%= f.input :slug %>

  <div class="form-actions">
  	<%= link_to "Cancel", podcasts_path, class: 'secondary button' %>
    <%= f.submit nil, class: 'primary button' %>
  </div><!-- /form-actions -->
</div>
