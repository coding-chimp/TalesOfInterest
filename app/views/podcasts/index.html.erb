<% title "Podcasts" %>

<h2>Podcasts</h2>

<table id="podcast_table">
	<thead>
		<tr>
			<th>Artwork</th>
			<th>Name</th>
			<th># Episodes</th>
			<th style="width: 55%; text-align: right;"></th>
		</tr>
	</thead>
	<tbody>
		<% for podcast in @podcasts do %>
			<% present podcast do |podcast_presenter| %>
				<tr>
					<td><%= podcast_presenter.artwork(:thumb) %></td>
					<td><%= podcast_presenter.name %></td>
					<td><%= podcast_presenter.episodes_count %></td>
					<td>
						<%= link_to "Episodes", podcast_episodes_path(podcast), class: 'small button secondary' %>

						<%= link_to "Last Episode", edit_episode_path(podcast, podcast.last_episode),
												class: 'small button' %>

						<%= link_to "New Episode", new_podcast_episode_path(podcast), class: 'small button primary' %>

						<%= link_to "Bookmarklet", podcast_presenter.bookmarklet_link, class: 'small button inverse' %>

						<%= link_to "Edit", edit_podcast_path(podcast), class: 'small button' %>

						<%= link_to "Delete", podcast_path(podcast), method: :delete, confirm: 'Are you sure?',
												class: 'small button alert' %>
					</td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

<p class="pull-left">
	<%= link_to "Import", import_podcast_path, class: 'button' %>
</p>

<p class="pull-right">
	<%= link_to "New", new_podcast_path, class: 'button primary' %>
</p>
