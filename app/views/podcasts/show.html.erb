<%- model_class = @podcast.class -%>

<div class="hero-unit">
	<ul class="thumbnails">
		<li class="span2">
			<% if @podcast.artwork? %>
				<div class="thumbnail">
					<%= image_tag @podcast.artwork %>
				</div>
			<% end %>
		</li>
		<li class="span3">
			<h2><%= @podcast.name %></h2>
			<p><%= @podcast.description %></p>
		</li>
	</ul>
</div>

<%= paginate @episodes %>

<% @episodes.each do |episode| %>
	<div class="well">
		<h2>
			<%= link_to(episode_path(@podcast, episode)) do %>
				<%= "##{episode.num}: " if episode.number %><%= episode.title %>
			<% end %>
		</h2>
		<h4><%= episode.created_at.strftime("%d. %B %Y") %><%= " â€¢ #{episode.playtime} Minuten" if episode.playtime %></h4>
		<%= markdown(episode.description) %>
	</div>
<% end %>

<%= paginate @episodes %>