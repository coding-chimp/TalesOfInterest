<%- model_class = @podcast.class -%>

<div class="hero-unit">
	<ul class="thumbnails">
		<li class="span2">
			<div class="thumbnail">
				<%= image_tag("Tales of Interest.jpg") %>
			</div>
		</li>
		<li class="span3">
			<h2><%= @podcast.name %></h2>
			<p><%= @podcast.description %></p>
		</li>
	</ul>
</div>

<% @podcast.episodes.order("created_at desc").each do |episode| %>
	<div class="well">
		<h2>
			<%= link_to(episode_path(@podcast, episode)) do %>
				<%= "##{episode.number}: " if episode.number %><%= episode.title %>
			<% end %>
		</h2>
		<h4><%= episode.created_at.strftime("%d. %B %Y") %><%= " â€¢ #{episode.length} Minuten" if episode.length %></h4>
		<%= markdown(episode.description) %>
	</div>
<% end %>