<% present @podcast do |podcast_presenter| %>
	<% title podcast_presenter.name %>

	<% content_for :banner do %>
	<ul class="small-block-grid-3">
		<li>
			<%= podcast_presenter.artwork_thumb(:medium) %>
		</li>
		<li class="small-12">
			<h2><%= podcast_presenter.name %></h2>
			<%= podcast_presenter.description %>
		</li><!-- /small-7-->
	</ul><!-- /small-block-grid-3 -->
	<% end %>

	<% content_for :banner_alt do %>
		<h2><%= podcast_presenter.name %></h2>
		<p><%= podcast_presenter.description %></p>
	<% end %>

	<%= render @episodes %>

	<%= paginate @episodes %>
<% end %>