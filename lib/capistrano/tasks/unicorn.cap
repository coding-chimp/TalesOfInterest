namespace :unicorn do
  %w(start stop force-stop restart upgrade reopen-logs).each do |task_name|
    desc "#{task_name.capitalize} Unicorn"
    task task_name.to_sym do
      on roles(:app), in: :sequence, wait: 5 do
        sudo "/etc/init.d/unicorn_#{fetch(:full_app_name)} #{task_name}"
      end
    end
  end
end
