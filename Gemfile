source 'https://rubygems.org'

gem 'rails', '3.2.3'

gem 'pg'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
	gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  
  gem 'uglifier', '>= 1.0.3'

  # Layout
  gem 'therubyracer'
  gem 'less-rails'
  gem 'twitter-bootstrap-rails'
end

group :development do
  gem 'rails-erd'
  gem 'bullet'
end

gem 'jquery-rails'

# Users
gem 'devise'

# Search
gem 'meta_search',  '>= 1.1.0.pre'

# Pretty URLs
gem 'friendly_id'

# Markdown formatting
gem 'redcarpet'
gem 'html2markdown', :git => 'git@github.com:coding-chimp/html2markdown.git'

# Pretty Terminal output
gem 'hirb'

# Attach files
gem "paperclip", "~> 3.0"

# Git history
gem 'grit'

# Pagination
gem 'kaminari'

# XML Parser
gem 'nokogiri'

# Easier forms
gem 'simple_form'

# Deployment
gem 'capistrano'
gem 'rvm-capistrano'

# Memcached
gem 'dalli'

# Web Player
gem 'podlove-web-player-rails', '~> 0.2.0'
